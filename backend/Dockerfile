# Home Budget Backend - FastAPI
# Matches production environment on firedup.app

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies for psycopg2
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (better caching)
COPY requirements.txt requirements-test.txt ./

# Install Python dependencies
# Note: stripe is used but missing from requirements.txt
RUN pip install --no-cache-dir -r requirements.txt -r requirements-test.txt stripe anthropic

# Copy application code
COPY . .

# Create non-root user for security
RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 8000

# Default command (can be overridden)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
