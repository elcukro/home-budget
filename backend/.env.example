# Home Budget Backend - Environment Configuration Template
# Copy this file to .env and fill in the values

# Database
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=home_budget

# Environment marker
ENVIRONMENT=production

# GoCardless Bank API
GOCARDLESS_SECRET_ID="your_gocardless_id"
GOCARDLESS_SECRET_KEY="your_gocardless_key"
REQUISITION_ID="your_requisition_id"

# Enable Banking (PSD2)
ENABLEBANKING_APP_ID="your_enablebanking_app_id"
ENABLEBANKING_PRIVATE_KEY_PATH="/path/to/enablebanking.pem"

# Tink API
TINK_CLIENT_ID="your_tink_client_id"
TINK_CLIENT_SECRET="your_tink_client_secret"
TINK_REDIRECT_URI="https://yourdomain.com/banking/tink/callback"

# Google OAuth
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Google OAuth for mobile
GOOGLE_WEB_CLIENT_ID=your_web_client_id
GOOGLE_IOS_CLIENT_ID=your_ios_client_id
GOOGLE_ANDROID_CLIENT_ID=your_android_client_id

# NextAuth
NEXTAUTH_SECRET="your_nextauth_secret"

# Stripe Billing
STRIPE_SECRET_KEY="your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"
STRIPE_PRICE_MONTHLY="your_monthly_price_id"
STRIPE_PRICE_ANNUAL="your_annual_price_id"
STRIPE_PRICE_LIFETIME="your_lifetime_price_id"

# Frontend URL
FRONTEND_URL="https://yourdomain.com"

# Sentry Error Tracking
SENTRY_DSN="your_sentry_dsn"

# OpenAI API Key (for AI insights and transaction categorization)
OPENAI_API_KEY="your_openai_api_key"

# Internal service secret - shared between frontend and backend
INTERNAL_SERVICE_SECRET="your_internal_service_secret"

# Scheduler Configuration
SCHEDULER_ENABLED=true
TINK_SYNC_INTERVAL_HOURS=6

# Anthropic API (AI Chat Advisor)
ANTHROPIC_API_KEY="your_anthropic_api_key"
AI_CHAT_MODEL=claude-haiku-4-5-20251001
AI_ANALYSIS_MODEL=claude-sonnet-4-5-20250929
AI_MAX_TOKENS=4096
AI_QUERIES_PER_MONTH=100
